    "electron-packager": "12.0.1",
    "eslint": "4.19.1",
    "grunt-contrib-watch": "1.1.0",
    "jest": "24.4.0",
    "jest-puppeteer": "4.0.0",
    "puppeteer": "1.13.0"
  }
